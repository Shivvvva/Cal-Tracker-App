<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:padding="16dp"
    tools:context="com.example.caltracker.DisplayFoodActivity">
    
    <LinearLayout
        android:id="@+id/displayFoodLinLayout"
        android:background="@color/colorBlueAccent"
        android:paddingBottom="12dp"
        android:paddingTop="2dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/totalCalsTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:paddingEnd="10dp"
            android:text="Total Calories"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
        <TextView
            android:text="|"
            android:textColor="#ffee1d27"
            android:textSize="27sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/totalItemsTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Food items"
            android:textColor="#474444"
            android:textStyle="bold" />

    </LinearLayout>
    <ListView
        android:id="@+id/listView"
        android:layout_below="@+id/displayFoodLinLayout"
        android:dividerHeight="2dp"
        android:divider="@color/colorBlueAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    </ListView>

</RelativeLayout>